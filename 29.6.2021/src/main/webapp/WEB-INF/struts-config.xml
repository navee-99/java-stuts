<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">
           
   <struts-config>       
  <form-beans>
   <form-bean name="firstForm" type="com.form.FirstForm"></form-bean>
   <form-bean name="personForm" type="com.form.PersonForm"></form-bean>
   <form-bean name="empForm" type="com.form.EmpForm"></form-bean>
   <form-bean name="deptForm" type="com.form.DeptForm"></form-bean>
   <form-bean name="bookForm" type="com.form.BookForm"></form-bean>
   <form-bean name="authorForm" type="com.form.authorForm"></form-bean>
   
</form-beans>
<action-mappings>
    <action name="firstForm" path="/first" type="com.action.HellowAction">
        <forward name="success" path="/home.jsp"></forward>
    </action>
    
    
   <action name="personForm" parameter="method" scope="request" path="/simpleform" type="com.action.DataAction">
    
       <forward name="success" path="/myform.jsp"></forward>
       <forward name="error" path="/error.jsp"></forward>
       <forward name="result" path="/result.jsp"></forward>
     </action>
     
     <action name="empForm" path="/org" scope="request" type="com.action.DeptAction">
       <forward name="success" path="/org.jsp"></forward>
       <forward name="error" path="/error.jsp"></forward>
    </action>
    <action name="bookForm" path="/lib" scope="request" type="com.action.AuthorAction">
       <forward name="success" path="/lib.jsp"></forward>
       <forward name="error" path="/error.jsp"></forward>
    </action>
    <action name="empForm" path="/saveit" scope="request" type="com.action.EmpAction">
       <forward name="success" path="/org.do" redirect="true"></forward>
       <forward name="error" path="/error.jsp"></forward>
    </action>
     <action name="bookForm" path="/saveit" scope="request" type="com.action.BookAction">
       <forward name="success" path="/lib.do" redirect="true"></forward>
       <forward name="error" path="/error.jsp"></forward>
    </action>
</action-mappings>
</struts-config> 